{{ 'component-media-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
  .media-height {
    {% if section.settings.mobile_height == 'adapt' and section.settings.image != blank %}
      height: 0px;
      padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
    {% else %}
      height: {{ section.settings.mobile_height }}
    {% endif %}
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .media-height {
      {% if section.settings.desktop_height == 'adapt' and section.settings.image != blank %}
        height: 0px;
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
      {% else %}
        height: {{ section.settings.desktop_height }};
        padding-bottom: 0px;
      {% endif %}
    }
  }
{%- endstyle -%}

<div class="media-with-text page-width section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }}">
  <div class="media-with-text__container media-mobile-{{ section.settings.image_mobile_position }} media-desktop-{{ section.settings.image_desktop_position }}">
    <div class="media-with-text__media media-height">
      <div>
        {% if section.settings.image != blank %}
          {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
          {%- capture sizes -%}
                (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
              {%- endcapture -%}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag: sizes: sizes, 
              widths: widths, 
              alt: section.settings.image.alt, 
              loading: 'lazy',
              class: 'media-with-text__image'
          }}
        {% endif %}
      </div>
    </div>
    <div class="media-with-text__text-wapper desktop-position-{{ section.settings.desktop_content_position }} color-{{ section.settings.color_scheme }}">
      <div class="media-with-text__text-container">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <h2 class="media-with-text__heading heading-{{ block.settings.heading_size }}" {{ block.shopify_attributes }}>{{ block.settings.heading }}</h2>
            {%- when 'text' -%}
              <div class="media-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Media with text",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "desktop_height",
        "options": [
          {
            "value": "adapt",
            "label": "Natural"
          },
          {
            "value": "550px",
            "label": "550px"
          },
          {
            "value": "800px",
            "label": "800px"
          }
        ],
        "default": "adapt",
        "label": "Desktop height"
      },
      {
        "type": "select",
        "id": "mobile_height",
        "options": [
          {
            "value": "adapt",
            "label": "Natural"
          },
          {
            "value": "250px",
            "label": "250px"
          },
          {
            "value": "300px",
            "label": "300px"
          }
        ],
        "default": "adapt",
        "label": "Mobile height"
      },
      {
        "type": "select",
        "id": "image_desktop_position",
        "options": [
          {
            "value": "image_first",
            "label": "Image first"
          },
          {
            "value": "image_second",
            "label": "Image second"
          }
        ],
        "default": "image_first",
        "label": "Image desktop position"
      },
      {
        "type": "select",
        "id": "image_mobile_position",
        "options": [
          {
            "value": "image_first",
            "label": "Image first"
          },
          {
            "value": "image_second",
            "label": "Image second"
          }
        ],
        "default": "image_first",
        "label": "Image mobile position"
      },
      {
        "type": "header",
        "content": "t:sections.image-with-text.settings.header.content"
      },      
      {
        "type": "select",
        "id": "desktop_content_position",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "middle",
            "label": "Middle"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          }
        ],
        "default": "top",
        "label": "Desktop content position"
      },
      {
        "type": "select",
        "id": "desktop_content_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Desktop content alignment"
      },
      {
        "type": "select",
        "id": "mobile_content_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Mobile content alignment"
      },
      {
        "type": "header",
        "content": "Colors"
      },        
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "Color scheme",
        "default": "scheme-1"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Container color scheme",
        "default": "scheme-1"
      },
      {
        "type": "header",
        "content": "Section layout"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "heading",
        "name": "t:sections.image-with-text.blocks.heading.name",
        "limit": 1,
        "settings": [
          {
            "type": "inline_richtext",
            "id": "heading",
            "default": "Lorem ullamco",
            "label": "Heading"
          },
          {
            "type": "select",
            "id": "heading_size",
            "options": [
              {
                "value": "small",
                "label": "Small"
              },
              {
                "value": "medium",
                "label": "medium"
              },
              {
                "value": "large",
                "label": "Large"
              }
            ],
            "default": "medium",
            "label": "Heading size"
          }
        ]
      },
      {
        "type": "text",
        "name": "Text",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Media with text",
        "blocks": [
          {
            "type": "heading"
          },
          {
            "type": "text"
          }
        ]
      }
    ]
  }
  {% endschema %}